<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"


    android:layout_marginVertical="320dp"

    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"


    android:background="#4760ED"
    android:padding="3dp"


    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textClose"
        android:layout_width="39dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/txtclosepopup"
        android:gravity="center"
        android:text="X"
        android:textColor="#01030C"


        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="142dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="46dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"


            android:layout_margin="5dp"

            android:background="@drawable/popup_icon_shape"
            android:foreground="@drawable/back_icon"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"


            android:background="@drawable/popup_icon_shape"


            android:foreground="@drawable/music_icon" />
    </LinearLayout>


</RelativeLayout>